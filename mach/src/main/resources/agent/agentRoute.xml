<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

	<!-- log4j configuration -->
	<bean id="log4jInitialization" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
    	<property name="targetClass" value="org.springframework.util.Log4jConfigurer" />
		<property name="targetMethod" value="initLogging" />
		<property name="arguments">
			<list>
				<value>log4j.properties</value>
			</list>
		</property>
    </bean>
    
    <!-- mach agent properties -->
    <bean id="props" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>machAgent.properties</value>
			</list>
		</property>    	
    </bean>
    
    	

<!-- Agent will be configured here, if there is even an agent.  May be able to do it with routes entirely 

    <bean id="machAgent" class="edu.mit.ll.nics.soa.common.processors.placemarkUdop.PlacemarkUdop" >        
        <property name="someproperty" value="" />
    </bean>
-->
    
	<camelContext id="machCamelContext" xmlns="http://camel.apache.org/schema/spring">
		<route id="pingMach">
        	<!-- ping mach every 5 minutes -->
   			<from uri="timer://mach?fixedRate=true&amp;period=2000"/>
    		<to uri="${machAgent.machURI}"/>
        </route>
	</camelContext>
    
